<%- include("header") -%>
    <div class="box">
      <h1 id="heading"><%=listTitle%></h1>
    </div>

    <div class="box">
      <form action="/delete" method="post">
        <% items.forEach(item => { %>
          <div class="item">
              <input type="checkbox" name="itemToDelete" value="<%=item._id%>" onchange="submit();">
              <p><%=item.name%></p>
          </div>
        <% });%>
        <input type="hidden" name="listName" value="<%=listTitle%>">
      </form>
      <form class="item" action="/" method="post">
        <input type="text" name="listItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value="<%=listTitle%>">+</button>
      </form>
    </div>
<%- include("footer") -%>
